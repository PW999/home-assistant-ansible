version: "3.8"
services:
  samba:
    image: gists/samba-server:{{ samba_version }}
    container_name: samba
    hostname: samba
    restart: unless-stopped
    stop_grace_period: 30s
    volumes:
      - /srv/samba/smb.conf:/etc/samba/smb.conf:ro
      - /srv:/mnt
      - /srv/samba/entrypoint.sh:/usr/bin/entrypoint.sh:ro
    ports:
      - "137:137/udp"
      - "138:138/udp"
      - "139:139"
      - "445:445"
